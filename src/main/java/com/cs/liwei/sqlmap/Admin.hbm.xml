<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >  
  
<hibernate-mapping package="com.cs.liwei.pojo">  
    <class name="Admin" table="manager">  
    <!-- pojo类 与字段对应  -->
        <id name="account" column="account" type="java.lang.Integer">  
            <generator class="native"></generator> 
        </id>  
        <property name="password" column="pwd" type="java.lang.String" />  
        <property name="accountName" column="accountName" type="java.lang.String" />  
    </class>  
</hibernate-mapping> 