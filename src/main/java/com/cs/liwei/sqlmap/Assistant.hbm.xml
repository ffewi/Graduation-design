<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >  
  
<hibernate-mapping package="com.cs.liwei.pojo">  
    <class name="Assistant" table="assistant">  
    <!-- pojo类 与字段对应  -->
        <id name="assistantNo" column="assistantNo" type="java.lang.Integer">  
            <generator class="native"></generator> 
        </id>  
        <property name="assistantName" column="assistantName" type="java.lang.String" />  
        <property name="assistantPwd" column="assistantPwd" type="java.lang.String" />  
        <property name="deptNo" column="deptNo" type="java.lang.Integer" /> 
    </class>  
</hibernate-mapping> 