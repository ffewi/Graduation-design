<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
  
<struts>  
  
    <!-- //<include file="struts-default.xml" />   -->
    <package name="liwei"  extends="struts-default">  
    <!-- com.liwei.ssh.action.RegisterAction -->
        <action name="register" class="regAction">  
            <result name="input">/Register.jsp</result>  
            <result name="success">/login.jsp</result>  
            <result name="error">/Fail.jsp</result>  
        </action> 
        <action name="login" class="logAction">  
        	<result name="adminHome">/admin/adminHome.jsp</result>
            <result name="input">/page/BYSJPage/home/login.jsp</result>  
            <result name="success">/index.jsp</result>  
            <result name="error">/Fail.jsp</result>  
        </action> 
        <!-- admin  管理学院，专业，课程  -->
        <action name="admin*" class="adminAction" method="{1}">
            <result name="dept">/admin/adminOfDept.jsp</result>
            <result name="deptUpdate">/admin/adminOfDeptUpdate.jsp</result> 
            <result name="deptAdd">/admin/adminOfDeptAdd.jsp</result>
            <result name="proIndex">/admin/adminOfPro.jsp</result>
            <result name="professionUpdate">/admin/adminOfProUpdate.jsp</result>
            <result name="courseIndex">/admin/adminOfCourse.jsp</result>
            <result name="courseAdd">/admin/adminOfCourseAdd.jsp</result>
            <result name="courseUpdate">/admin/adminOfCourseUpdate.jsp</result>
            
        </action>
        <!-- admin 管理 员工 教师，辅导，教学秘书，学生 --> 
        <action name="member*" class="adminMember" method="{1}">
        	<result name="teacherIndex">/admin/adminOfTeacher.jsp</result>
        	<result name="teacherAdd">/admin/adminOfTeacherAdd.jsp</result>
        	<result name="teacherUpdate">/admin/adminOfTeacherUpdate.jsp</result>
        	<result name="classIndex">/admin/adminOfClass.jsp</result>
        	<result name="classAdd">/admin/adminOfClassAdd.jsp</result>
        	<result name="teachingIndex">/admin/adminOfTeachingPlan.jsp</result>
        	<result name="teachingAdd">/admin/adminOfTeachingPlanAdd.jsp</result>
        	<result name="teachingUpdate">/admin/adminOfTeachingPlanUpdate.jsp</result>
        	<result name="studentIndex">/admin/adminOfStudent.jsp</result>
        	<result name="studentAdd">/admin/adminOfStudentAdd.jsp</result>
        	<result name="studentUpdate">/admin/adminOfStudentUpdate.jsp</result>
        </action>
        <action name="assistant" class="assistantAction" method="{1}">  
            <result name="input">/page/BYSJPage/home/login.jsp</result>  
            <result name="success">/index.jsp</result>  
            <result name="error">/Fail.jsp</result>  
        </action> 
    </package>  
  
</struts>  